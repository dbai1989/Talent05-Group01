\begin_layout Standard
We show that the Hamiltonian 
\begin_inset Formula $\hat{H}_{0}$
\end_inset

 and 
\begin_inset Formula $\hat{V}$
\end_inset

 commute with both the spin projection 
\begin_inset Formula $\hat{S}_{z}$
\end_inset

 and the total spin 
\begin_inset Formula $\hat{S}^{2}$
\end_inset

.
 Recall 
\begin_inset Formula 
\begin{align*}
\hat{H}_{0}=\sum_{p\sigma}(p-1)a_{p\sigma}^{\dagger}a_{p\sigma}\\
\hat{V}=-g\frac{1}{4}a_{q+}^{\dagger}a_{q-}^{\dagger}a_{s+}a_{s-}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore the commutation relation reads
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
[\hat{H}_{0},\hat{S}_{z}]=[\sum_{p\sigma_{1}}(p-1)a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}},\frac{1}{2}\sum_{q\sigma_{2}}\sigma_{2}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}]\\
=\sum_{p\sigma_{1}}(p-1)\frac{1}{2}\sum_{q\sigma_{2}}\sigma_{2}[a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}},a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}].
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let us calculate the last commutation relation, where we will only manipulate
 the second element
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
[a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}},a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}] & =a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}-a_{q\sigma_{2}}^{\dagger}\underbrace{a_{q\sigma_{2}}a_{p\sigma_{1}}^{\dagger}}a_{p\sigma_{1}}\\
 & =a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}-a_{q\sigma_{2}}^{\dagger}(\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}-a_{p\sigma_{1}}^{\dagger}a_{q\sigma_{2}})a_{p\sigma_{1}}\\
 & =a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}+\underbrace{a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}^{\dagger}}\underbrace{a_{q\sigma_{2}}a_{p\sigma_{1}}}-a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}\\
 & =a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}+a_{p\sigma_{1}}^{\dagger}\underbrace{a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}}a_{q\sigma_{2}}-a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}\\
 & =a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}+a_{p\sigma_{1}}^{\dagger}(\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}-a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger})a_{q\sigma_{2}}-a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}\\
 & =\underbrace{a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}}+a_{p\sigma_{1}}^{\dagger}\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}a_{q\sigma_{2}}-\underbrace{a_{p\sigma_{1}}^{\dagger}a_{p\sigma_{1}}a_{q\sigma_{2}}^{\dagger}a_{q\sigma_{2}}}-a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}}\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}\\
 & =(a_{p\sigma_{1}}^{\dagger}a_{q\sigma_{2}}-a_{q\sigma_{2}}^{\dagger}a_{p\sigma_{1}})\delta_{\sigma_{1},\sigma_{2}}\delta_{p,q}=0.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Next we show that 
\begin_inset Formula $[\hat{V},S_{z}]=0$
