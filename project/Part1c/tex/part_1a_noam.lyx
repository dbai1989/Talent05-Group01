.
 We hence show that 
\begin_inset Formula 
\begin{align*}
[a_{q+}^{\dagger}a_{q-}^{\dagger}a_{s+}a_{s-},a_{p\sigma}^{\dagger}a_{p\sigma}] & =a_{q+}^{\dagger}a_{q-}^{\dagger}a_{s+}a_{s-}a_{p\sigma}^{\dagger}a_{p\sigma}-a_{p\sigma}^{\dagger}a_{p\sigma}a_{q+}^{\dagger}a_{q-}^{\dagger}a_{s+}a_{s-}.
\end{align*}

\end_inset

We concentrate on the last element 
\begin_inset Formula 
\begin{align*}
a_{p\sigma}^{\dagger}\underbrace{a_{p\sigma}a_{q+}^{\dagger}}a_{q-}^{\dagger}a_{s+}a_{s-} & =a_{p\sigma}^{\dagger}(\delta_{p,q}\delta_{\sigma,+}-a_{q+}^{\dagger}a_{p\sigma})a_{q-}^{\dagger}a_{s+}a_{s-}\\
 & =a_{p\sigma}^{\dagger}\delta_{p,q}\delta_{\sigma,+}a_{q-}^{\dagger}a_{s+}a_{s-}-a_{p\sigma}^{\dagger}a_{q+}^{\dagger}\underbrace{a_{p\sigma}a_{q-}^{\dagger}}a_{s+}a_{s-}\\
 & =a_{p\sigma}^{\dagger}\delta_{p,q}\delta_{\sigma,+}a_{q-}^{\dagger}a_{s+}a_{s-}-a_{p\sigma}^{\dagger}a_{q+}^{\dagger}(\delta_{p,q}\delta_{\sigma,-}-a_{q-}^{\dagger}a_{p\sigma})a_{s+}a_{s-}\\
 & =a_{p\sigma}^{\dagger}\delta_{p,q}\delta_{\sigma,+}a_{q-}^{\dagger}a_{s+}a_{s-}-a_{p\sigma}^{\dagger}a_{q+}^{\dagger}\delta_{p,q}\delta_{\sigma,-}a_{s+}a_{s-}+a_{p\sigma}^{\dagger}a_{q+}^{\dagger}a_{q-}^{\dagger}a_{p\sigma}a_{s+}a_{s-}\\
 & =(a_{p\sigma}^{\dagger}a_{q-}^{\dagger}a_{s+}a_{s-}\delta_{\sigma,+}-a_{p\sigma}^{\dagger}a_{q+}^{\dagger}a_{s+}a_{s-}\delta_{\sigma,-})\delta_{p,q}+a_{p\sigma}^{\dagger}a_{q+}^{\dagger}a_{q-}^{\dagger}a_{p\sigma}a_{s+}a_{s-}
\end{align*}

